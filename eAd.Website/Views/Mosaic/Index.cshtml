@using eAd.DataAccess
@using eAd.Utilities
@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/jquery.contextMenu.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/mosaic.css")" rel="stylesheet" type="text/css"/>
<link href="@Url.Content("~/Content/coin-slider-styles.css")" rel="stylesheet" type="text/css"/>
<script src="@Url.Content("~/Scripts/coin-slider.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.contextMenu.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/mosaic.js")" type="text/javascript"></script>
<h2>
    Mosaic Designer</h2>
<div class="editor-label">
    Choose Mosaic
</div>
<div class="editor-field">
    @Html.DropDownList("MosaicID", String.Empty)
    <button id="CreateNewMosaic">
        Create New Mosaic</button>
    <button id="SaveMosaic">
        Save Mosaic</button>
    <button id="Preview">
        Preview Mosaic</button>
</div>

<div id="demo">
    <span>
        <button id="AddNewPosition">
            Add New Position</button>
        <br />
    </span>
    <div id="container" class="ui-widget-content">
        <h3 class="ui-widget-header">
            Player Screen</h3>
        @*<div id="player1" class="resizable ui-state-active">
            <h3 class="ui-widget-header">
                Position 1</h3>
        </div>*@
    </div>
</div>
<div class="ui-widget ui-helper-clearfix ">
    <h3 class="ui-widget-header">
        Gallery</h3>
    <ul id="gallery" class="gallery ui-helper-reset ui-helper-clearfix">
        @foreach (var item in (List<Medium>)ViewBag.Media)
        {
            <li class="ui-widget-content ui-corner-tr" id="gi@(item.MediaID)">
                <h5 class="ui-widget-header">@item.Name (@(item.MediaID)) [@(MimeExtensionHelper.GetSimpleType(item.Location))]</h5>
                <img src="@( !(String.IsNullOrEmpty(item.Location)) ? /*Path.GetDirectoryName(item.Location) QuickHacktm*/ "Uploads/Temp/Media" + "/" + "Thumb" + Path.GetFileNameWithoutExtension(item.Location) + ".jpg" : "/Content/Images/no_image.gif")"  alt="[@(MimeExtensionHelper.GetSimpleType(item.Location))]" width="96" height="72" />
                <a href="@( !(String.IsNullOrEmpty(item.Location)) ? /*Path.GetDirectoryName(item.Location) QuickHacktm*/ "Uploads/Temp/Media" + "/" + "Thumb" + Path.GetFileNameWithoutExtension(item.Location) + ".jpg" : "/Content/Images/no_image.gif")" title="View larger image" class="ui-icon ui-icon-zoomin">
                    View larger</a> @*<a href="link/to/trash/script/when/we/have/js/off" title="Delete this image" class="ui-icon ui-icon-trash">Delete image</a>*@
            </li>
        }
    </ul>
</div>
<ul id="MosaicMenu" class="contextMenu">
    <li class="edit"><a href="#edit">Edit Mosaic</a></li>
    <li class="cut separator"><a href="#cut">Cut</a></li>
    <li class="copy"><a href="#copy">Copy</a></li>
    <li class="paste"><a href="#paste">Paste</a></li>
    <li class="delete"><a href="#delete">Delete</a></li>
    <li class="quit separator"><a href="#quit">Quit</a></li>
</ul>

<ul id="PositionMenu" class="contextMenu">
    <li class="paste"><a href="#add">Add Media</a></li>
    <li class="cut separator"><a href="#cut">Cut</a></li>
    <li class="copy"><a href="#copy">Copy</a></li>
    <li class="delete"><a href="#delete">Delete</a></li>
    <li class="quit separator"><a href="#quit">Quit</a></li>
    <li class="delete"><a href="#delete">Delete Position</a></li>
</ul>
<div id="editMosaic"></div>