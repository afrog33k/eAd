@using eAd.DataAccess
@using eAd.Utilities
@{
    ViewBag.Title = "Index";
}
<link href="@Url.Content("~/Content/jquery.contextMenu.css")" rel="stylesheet" type="text/css" />

<link href="@Url.Content("~/Content/coin-slider-styles.css")" rel="stylesheet" type="text/css"/>
<script src="@Url.Content("~/Scripts/coin-slider.js")" type="text/javascript"></script>
      <script src="@Url.Content("~/Scripts/jquery.contextMenu.js")" type="text/javascript"></script>
       <script src="@Url.Content("~/Scripts/mosaic.js")" type="text/javascript"></script>
   
<h2>
    Mosaic Designer</h2>
<div class="editor-label">
    Choose Mosaic
</div>
<div class="editor-field">
    @Html.DropDownList("MosaicID", String.Empty)
    <button id="CreateNewMosaic">
        Create New Mosaic</button>
    <button id="SaveMosaic" data-url="@Url.Action("SaveMosaic", "Mosaic", null, "http")">
        Save Mosaic</button>

        <button id="Preview" data-url="@Url.Action("Preview", "Mosaic", null, "http")">
        Preview Mosaic</button>
       
</div>

<script type="text/javascript">

    $(document).ready(function() {
        ResetDefaults();
    });
</script>

<style type="text/css">
    .position
    {
    }
    .fluid-img
    {
        width: 90%;
    }
    #container
    {
        width: 768px;
        height: 1366px;
    }
    #container h3
    {
        text-align: center;
        margin: 0;
        margin-bottom: 10px;
    }
    .resizable
    {
        background-position: top left;
        width: 150px;
        height: 150px;
    }
    .resizable, .container
    {
        padding: 0.5em;
    }
    .ui-resizable-helper
    {
        border: 2px dotted #00F;
    }
    #gallery
    {
        float: left;
        width: 65%;
        min-height: 12em;
    }
    * html #gallery
    {
        height: 12em;
    }
    /* IE6 */
    .gallery.custom-state-active
    {
        background: #eee;
    }
    .gallery li
    {
        float: left;
        width: 96px;
        padding: 0.4em;
        margin: 0 0.4em 0.4em 0;
        text-align: center;
    }
    .gallery li h5
    {
        margin: 0 0 0.4em;
        cursor: move;
    }
    .gallery li a
    {
        float: right;
    }
    .gallery li a.ui-icon-zoomin
    {
        float: left;
    }
    .gallery li img
    {
        width: 100%;
        cursor: move;
    }
    
    #trash
    {
        float: right;
        width: 32%;
        min-height: 18em;
        padding: 1%;
    }
    * html #trash
    {
        height: 18em;
    }
    /* IE6 */
    #trash h4
    {
        line-height: 16px;
        margin: 0 0 0.4em;
    }
    #trash h4 .ui-icon
    {
        float: left;
    }
    #trash .gallery h5
    {
        display: none;
    }
</style>

<div id="demo">
    <span>
        <button id="AddNewPosition">
            Add New Position</button>
        <br />
    </span>
    <div id="container" class="ui-widget-content">
        <h3 class="ui-widget-header">
            Player Screen</h3>
        @*<div id="player1" class="resizable ui-state-active">
            <h3 class="ui-widget-header">
                Position 1</h3>
        </div>*@
    </div>
</div>
<div class="ui-widget ui-helper-clearfix ">
    <h3 class="ui-widget-header">
        Gallery</h3>
    <ul id="gallery" class="gallery ui-helper-reset ui-helper-clearfix">
        @foreach (var item in (List<Medium>)ViewBag.Media)
        {
    <li class="ui-widget-content ui-corner-tr" id="gi@(item.MediaID)">
		<h5 class="ui-widget-header">@item.Name (@(item.MediaID))  [@(MimeExtensionHelper.GetSimpleType(item.Location))]</h5>
		<img src="@( !(String.IsNullOrEmpty(item.Location)) ? /*Path.GetDirectoryName(item.Location) QuickHacktm*/ "Uploads/Temp/Media" + "/" + "Thumb" + Path.GetFileNameWithoutExtension(item.Location) + ".jpg" : "/Content/Images/no_image.gif")"  alt="[@(MimeExtensionHelper.GetSimpleType(item.Location))]" width="96" height="72" />
		<a href="@( !(String.IsNullOrEmpty(item.Location)) ? /*Path.GetDirectoryName(item.Location) QuickHacktm*/ "Uploads/Temp/Media" + "/" + "Thumb" + Path.GetFileNameWithoutExtension(item.Location) + ".jpg" : "/Content/Images/no_image.gif")" title="View larger image" class="ui-icon ui-icon-zoomin">View larger</a>
		@*<a href="link/to/trash/script/when/we/have/js/off" title="Delete this image" class="ui-icon ui-icon-trash">Delete image</a>*@
	</li>
        }
    </ul>
</div>

