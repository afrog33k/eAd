@using eAd.Website.Controllers
@using eAd.Website.Extensions
@using eAd.Website.Repositories
@model eAd.DataAccess.Medium
@{
    Layout = "";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.marquee.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/colorpicker.css")" rel="stylesheet" type="text/css" media="all">
<script src="@Url.Content("~/Scripts/ColorPicker.js")" type="text/javascript"></script>

  
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>New Marquee</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <div class="editor-label">
            Advertiser's 
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Location)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Location)
            @Html.ValidationMessageFor(model => model.Location)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model =>  model.Duration) 
        </div>
        <div class="editor-field">
            @Html.EditorFor(model =>  model.Duration)
            @Html.ValidationMessageFor(model => model.Duration)
        </div>
        
        
            <div class="editor-label">
            @Html.LabelFor(model => model.Tags)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Tags)
            @Html.ValidationMessageFor(model => model.Tags)
        </div>
        
        <div class="editor-label">
            @* @Html.LabelFor(model => model.)*@
            Text Color
        </div>
        <div class="editor-field">
            @*      @Html.EditorFor(model => model.Tags)
            @Html.ValidationMessageFor(model => model.Tags)*@
            <input class="color" id="textColor" value="@ViewBag.ForeColor" />
        </div>

       <div class="editor-label">
            @* @Html.LabelFor(model => model.)*@
            Background Color
        </div>
        <div class="editor-field">
            @*      @Html.EditorFor(model => model.Tags)
            @Html.ValidationMessageFor(model => model.Tags)*@
            <input class="color" id="backColor" value="@ViewBag.BackColor"/>
        </div>
      
          <div class="editor-label">
            @* @Html.LabelFor(model => model.)*@
            Scroll Direction
        </div>
        <div class="editor-field">
            @*      @Html.EditorFor(model => model.Tags)
            @Html.ValidationMessageFor(model => model.Tags)*@
           
            <select>
  <option value="LeftToRight">Left To Right</option>
  <option value="RightToLeft">Right To Left</option>
</select> 
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Type)
            @Html.ValidationMessageFor(model => model.Type)
        </div>

        <p>
            <input type="submit" value="Save To Library" />
        </p>
    </fieldset>
    
    <marquee  behavior="scroll" scrollamount="1" direction="left" width="350" id="marquee">
               @Model.Text
               </marquee>
}

<div id="results"></div>
  
<script type="text/javascript">

    $(function () {
        $('#textColor').ColorPicker();
        $('#backColor').ColorPicker();

        
        });
  
  
    function HandleType(uploadid, type, thumbnail, text, path, duration) {
        $("#Type").val(type);
        //   $("#" + uploadid + "preview").attr("src", thumbnail);
        $("#DisplayLocation").val(path);

        $("#Duration").val(duration);

        if (text != "") {
            $("#marquee").innerHTML(type);
        }
    }
</script>