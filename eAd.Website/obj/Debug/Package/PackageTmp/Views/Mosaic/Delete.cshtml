<script type="text/javascript">
$(function () {
 
    $('#DeleteMosaic').click(function () {
        $.ajax({
            type: 'AJAX',
            url: "@Url.Action("DeleteConfirmed","Mosaic",new {id=Model.MosaicID})",
            data: null,
                  success: function (result) {
                        // $('#result').html(result);
                        alert(result);

                        window.parent.CloseDeleteMosaic();
                    },
                failure: function (result) {
                        // $('#result').html(result);
                        alert(result);

                        window.parent.CloseDeleteMosaic();
                    },
            async: true,
            cache: false,
            timeout: 30000
        });

           
});
    });

</script>