<Window x:Class="DesktopClient.SplashScreen" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:DesktopClient="clr-namespace:DesktopClient"
        Height="236" Width="414" Background="Orange" BorderBrush="DarkOrange"
        BorderThickness="3" ResizeMode="NoResize" ShowInTaskbar="False" Title="SplashScreen" 
        WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Label Margin="19,22,17,80" FontSize="48" Foreground="MintCream" HorizontalContentAlignment="Center" Name="label1" VerticalContentAlignment="Center">
            <Label.BitmapEffect>
                <OuterGlowBitmapEffect GlowSize="15" />
            </Label.BitmapEffect> eAd Loading
        </Label>
        <Label Height="28" Margin="19,0,17,15" Content="{Binding Source={x:Static DesktopClient:MessageListener.Instance},Path=Message}" Foreground="White" Name="label2" VerticalAlignment="Bottom"></Label>
    </Grid>
</Window>