<UserControl x:Class="ClientApp.MainUI.LoadingProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
  <Grid>
    <Grid.Background>
      <ImageBrush Stretch="UniformToFill" TileMode="None" />
    </Grid.Background>
    <ProgressBar Height="45" HorizontalAlignment="Stretch" Name="progressBar" VerticalAlignment="Bottom"
                 Foreground="#9B006400">
      <ProgressBar.Background>
        <SolidColorBrush />
      </ProgressBar.Background>
    </ProgressBar>
    <Label Content="Loading Your Profile, Please Wait ..." HorizontalAlignment="Center" Name="label1"
           VerticalAlignment="Top" Width="862" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
           FontFamily="Tempus Sans ITC" FontSize="56" />
  </Grid>
</UserControl>