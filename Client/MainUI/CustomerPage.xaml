<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Widgets="clr-namespace:ClientApp.Widgets" mc:Ignorable="d" 
	x:Class="ClientApp.CustomerPage"
	x:Name="eADWindow"
	d:DesignWidth="768" d:DesignHeight="1360" >

    <UserControl.Resources>
        <Storyboard x:Key="eAd"/>
    </UserControl.Resources>

   

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource eAd}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard Name="FormFade">
                    <DoubleAnimation  Name="FormFadeAnimation"
                                            Storyboard.TargetName="eADWindow"
                                            Storyboard.TargetProperty="(UserControl.Opacity)"
                                            From="0.0" To="1.0" Duration="0:0:2"
                                            AutoReverse="False" RepeatBehavior="1x"
                                         />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="UserControl.Unloaded">
            <BeginStoryboard>
                <Storyboard Name="FormFadeOut" Completed="FormFadeOut_Completed">
                    <DoubleAnimation  Name="FormFadeOutAnimation"
                                            Storyboard.TargetName="eADWindow"
                                            Storyboard.TargetProperty="(UserControl.Opacity)"
                                            From="1.0" To="0.0" Duration="00:00:2"
                                            AutoReverse="False" RepeatBehavior="1x"
                                         />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
    
   
    <Grid x:Name="LayoutRoot" Background="White" Height="Auto" Width="Auto">
            <Widgets:Profile x:Name="CustomerProfile" Margin="12,12,269,1066"></Widgets:Profile>
                <Widgets:Location x:Name="LocationWidget" Margin="505,12,12,358"></Widgets:Location>
        <Widgets:CarInfo  x:Name="CarInfoWidget" Margin="12,296,269,-296"></Widgets:CarInfo>
        <Widgets:BatteryInfo x:Name="BatteryInfoWidget" Margin="12,652,269,358"></Widgets:BatteryInfo>
        </Grid>
    
</UserControl>