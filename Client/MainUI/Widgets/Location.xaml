        <Label Content="Location" FontSize="56" FontWeight="Bold" Height="80" HorizontalAlignment="Right" Margin="0,12,12,0" Name="CustomerLocation" VerticalAlignment="Top" Width="576" />
        <Separator Height="18" HorizontalAlignment="Left" Margin="12,74,0,0" Name="separator3" VerticalAlignment="Top" Width="576" />
        <Controls:ImageListBox x:Name="StationList" Margin="0,637,0,43" Height="320" />
    </Grid>
</UserControl>
